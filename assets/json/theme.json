{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"color": {
			"defaultPalette": false,
			"custom": true,
			"link": true
		},
		"layout": {
			"contentSize": "1200px",
			"wideSize": "1440px"
		},
		"typography": {
			"customFontSize": true,
			"fontSizes": [
				{
					"slug": "x-small",
					"size": "10px",
					"name": "Extra Small:  "
				},
				{
					"slug": "small",
					"size": "12px",
					"name": "Small:  "
				},
				{
					"slug": "medium",
					"size": "16px",
					"name": "Medium:  "
				},
				{
					"slug": "large",
					"size": "22px",
					"name": "Large:  "
				},
				{
					"slug": "super",
					"size": "32px",
					"name": "Super:  "
				},
				{
					"slug": "heading-1",
					"size": "90px",
					"name": "Heading 1:  "
				},
				{
					"slug": "heading-2",
					"size": "70px",
					"name": "Heading 2:  "
				},
                {
					"slug": "heading-3",
					"size": "50px",
					"name": "Heading 3:  "
				},
				{
					"slug": "sub-heading",
					"size": "36px",
					"name": "Sub-heading:  "
				}
			]
		},
		"spacing": {
			"margin": true,
			"padding": true,
			"blockGap": true,
			"units": ["px", "em", "rem", "vh", "vw"]
		}
	},
	"styles": {
		"elements": {
			"link": {
				"color": {
					"text": "#D6724E"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "clamp( 40px, calc(1.5vw + 1rem), 90px )",
					"lineHeight": "clamp( 40px, calc(1.5vw + 1rem), 90px )",
					"fontWeight": "700"
				},
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "1.3rem",
						"left": "0",
						"right": "0"
					}
				},
				"color": {
					"text": "#333333"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "clamp( 30px, calc(1.5vw + 1rem), 70px )",
					"lineHeight": "clamp( 30px, calc(1.5vw + 1rem), 70px )",
					"fontWeight": "700"
				},
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "1.3rem",
						"left": "0",
						"right": "0"
					}
				},
				"color": {
					"text": "#333333"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "clamp( 24px, calc(1.5vw + 1rem), 50px )",
					"lineHeight": "clamp( 24px, calc(1.5vw + 1rem), 50px )",
					"fontWeight": "700"
				},
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "1.3rem",
						"left": "0",
						"right": "0"
					}
				},
				"color": {
					"text": "#333333"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "clamp( 20px, calc(1.5vw + 1rem), 36px )",
					"lineHeight": "clamp( 20px, calc(1.5vw + 1rem), 36px )",
					"fontWeight": "700"
				},
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "1.3rem",
						"left": "0",
						"right": "0"
					}
				},
				"color": {
					"text": "#333333"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "clamp( 18px, calc(1.5vw + 1rem), 32px )",
					"lineHeight": "clamp( 18px, calc(1.5vw + 1rem), 32px )",
					"fontWeight": "700"
				},
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "1.3rem",
						"left": "0",
						"right": "0"
					}
				},
				"color": {
					"text": "#333333"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "clamp( 16px, calc(1.5vw + 1rem), 22px )",
					"lineHeight": "clamp( 16px, calc(1.5vw + 1rem), 22px )",
					"fontWeight": "700"
				},
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "1.3rem",
						"left": "0",
						"right": "0"
					}
				},
				"color": {
					"text": "#333333"
				}
			}
		},
		"spacing":{
			"padding": {
				"top": "0",
				"bottom": "0",
				"left": "0",
				"right": "0"
			},
			"margin": {
				"top": "0",
				"bottom": "0",
				"left": "0",
				"right": "0"
			},
			"blockGap": "1.2rem"
		},
		"border": {
			"radius": "4px"
		},
		"color": {
			"text": "#333"
		},
		"typography": {
			"fontSize": "22.5px",
			"lineHeight": "40px",
			"fontWeight": "300"
		},
		"blocks": {
			"core/paragraph": {
				"spacing":{
					"padding": {
						"top": "0",
						"bottom": "0",
						"left": "0",
						"right": "0"
					},
					"margin": {
						"top": "0",
						"bottom": "0",
						"left": "0",
						"right": "0"
					}
				},
				"typography": {
					"fontSize": "1.6rem",
					"lineHeight": "1.8rem",
					"fontWeight": "400"
				}
			},
			"core/pullquote": {
				"color": {
					"text": "#D26A48",
					"background": "#D9D7CD !important"
				},
				"spacing": {
					"margin": {
						"top": "1em",
						"bottom": "1em",
						"left": "0",
						"right": "0"
					},
					"padding": {
						"top": "clamp( 17px, calc(1.25vw + 1rem), 24px )",
						"bottom": "clamp( 17px, calc(1.25vw + 1rem), 24px )",
						"left": "clamp( 16px, calc(1vw + 1rem), 20px )",
						"right": "clamp( 16px, calc(1vw + 1rem), 20px )"
					}
				}
			},
			"core/quote": {
				"color": {
					"text": "#D26A48",
					"background": "#D9D7CD !important"
				},
				"spacing": {
					"margin": {
						"top": "1em",
						"bottom": "1em",
						"left": "0",
						"right": "0"
					},
					"padding": {
						"top": "clamp( 17px, calc(1.25vw + 1rem), 24px )",
						"bottom": "clamp( 17px, calc(1.25vw + 1rem), 24px )",
						"left": "clamp( 16px, calc(1vw + 1rem), 20px )",
						"right": "clamp( 16px, calc(1vw + 1rem), 20px )"
					}
				}
			},
			"core/button": {
				"spacing": {
					"padding": {
						"top": "18px",
						"bottom": "18px",
						"right": "20px",
						"left": "20px"
					},
					"margin": {
						"top": "20px",
						"bottom": "20px"
					}
				},
				"typography": {
					"fontSize": "18px",
					"fontFamily": "Raleway, sans-serif",
					"lineHeight": "16px"
				}
			}
		}
	}
}
